<!DOCTYPE html>
<html lang="en">
<!-- head -->
    <%-  include('partials/head', {page: articles.title}) %> 
<body>
    <%- include('partials/navbar') %>
    <hr>
    <section class="heroBanner"> 
        <div class="container"> 
         <div class="herotitle">Stay Curious.</div>
         <div class="subtitle">Discover stories, thinking, and expertise from writers on any topic.</div>
         <div class="action"><a href="/show" class="btn btn-regular">Start Reading</a></div>
        </div>
    </section>
    <hr>
     
    
    <section class="container">
        <div class="">
            <h2 class="title">All Articles</h2>
        </div>
        <div class="postGrids three-col">
            <% for (let i = 0; i < articles.length; i++){ %> 
                <% const firstArticle = articles[i] %>
            <div class="grid">
                <div class="count">01</div>
                <div class="postItem">
                    <div class="authorMeta"><img src="" alt="" class="authorImage">
                        <span class="authorName"><%= firstArticle.author %> </span>
                    </div>

                    <div class="postTitle">
                        <a href="<%= firstArticle._id %> "><%=firstArticle.title %> </a>
                    </div>
                    <div class="postMeta"><span class="date"><%= (new Date(firstArticle.publishDate)). toLocaleDateString('en-US') %> </span> â–ª 16 min read</div>
                </div>

            </div>
            <% }; %> 
        </div>
    </section>

